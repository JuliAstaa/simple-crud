<div
  class="container d-flex flex-column justify-content-center align-items-center w-100 vh-100"
>
  <h1>ADD BOOK</h1>

  <% dataBuku.forEach(buku => { %>

  <form
    method="POST"
    action="/edit?_method=PUT&id=<%= buku.id_buku %>"
    class="w-100"
  >
    <div class="form-group">
      <label for="judulBuku">Id Buku</label>
      <input
        type="text"
        class="form-control"
        id="idBuku"
        name="idBuku"
        required
        readonly
        value="<%= buku.id_buku %>"
      />
    </div>
    <div class="form-group">
      <label for="judulBuku">Judul Buku</label>
      <input
        type="text"
        class="form-control"
        id="judulBuku"
        name="judulBuku"
        required
        value="<%= buku.judul_buku %>"
      />
    </div>
    <div class="form-group">
      <label for="deskripsi">Deskripsi</label>
      <input
        type="text"
        class="form-control"
        id="deskripsi"
        name="deskripsi"
        required
        value="<%= buku.deskripsi %>"
      />
    </div>
    <div class="form-group">
      <label for="pengarang">Pengarang</label>
      <input
        type="text"
        class="form-control"
        id="pengarang"
        name="pengarang"
        required
        value="<%= buku.nama_pengarang %>"
      />
    </div>
    <div class="form-group">
      <label for="tahunTerbit">Tahun Terbit</label>
      <input
        type="text"
        class="form-control"
        id="tahunTerbit"
        name="tahunTerbit"
        value="<%= buku.tahun_terbit %>"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <button type="reset" class="btn btn-danger">Reset</button>
    <a href="/data-buku" class="btn btn-success">Data Buku</a>
  </form>
  <% }) %>
</div>
