<div
  class="container d-flex flex-column justify-content-center align-items-center w-100 vh-100"
>
  <h1>ADD BOOK</h1>
  <form method="post" action="/add-book " class="w-100">
    <div class="form-group">
      <label for="judulBuku">Judul Buku</label>
      <input
        type="text"
        class="form-control"
        id="judulBuku"
        name="judulBuku"
        required
      />
    </div>
    <div class="form-group">
      <label for="deskripsi">Deskripsi</label>
      <input
        type="text"
        class="form-control"
        id="deskripsi"
        name="deskripsi"
        required
      />
    </div>
    <div class="form-group">
      <label for="pengarang">Pengarang</label>
      <input
        type="text"
        class="form-control"
        id="pengarang"
        name="pengarang"
        required
      />
    </div>
    <div class="form-group">
      <label for="tahunTerbit">Tahun Terbit</label>
      <input
        type="text"
        class="form-control"
        id="tahunTerbit"
        name="tahunTerbit"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-danger">Reset</button>
    <a href="/data-buku" class="btn btn-success">Data Buku</a>
  </form>
</div>
